@model SchoDotCom.WebUI.ViewModels.Home.ResumeViewModel
@{
    ViewBag.Title = "Resume";
}
<div class="row resume-header">
    <div class="col-md-4 hidden-sm hidden-xs">
        <img class="avatar-image" alt="Stoyan Dimov" src="~/Media/Images/avatar-400.jpg" />
    </div>
    <div class="col-md-8">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4 col-xs-5 hidden-md hidden-lg">
                    <img class="img-circle img-thumbnail small-avatar" src="~/Media/Images/avatar-400.jpg" />
                </div>
                <div class="col-sm-8 col-xs-7">
                    <h2>Stoyan Dimov</h2>
                    <h4>Web application developer</h4>
                </div>
            </div>
            <hr />
            <ul class="list-group">
            @if (Model.IncludeContactDetails)
            {
                <li><i class="glyphicon glyphicon-phone"></i> @Model.PhoneNumber</li>
                <li><i class="glyphicon glyphicon-envelope small"></i> @Model.EmailAddress</li>
                <li><i class="glyphicon glyphicon-map-marker"></i> @Model.Address</li>
            }
            else
            {
                <li><i class="glyphicon glyphicon-map-marker"></i> Haarlem, The Netherlands</li>
            }
            </ul>
        </div>
    </div>
</div>
<div class="row"><div class="col-md-12"><div class="separator">&nbsp;</div></div></div>
<div class="row resume-main">
    <div class="col-md-4">
        <div class="panel-body">
            <h2>Knowledge</h2>
            <ul>
                <li>Mvc Architecture</li>
                <li>Object-Oriented Programming</li>
                <li>Microsoft Technologies</li>
            </ul>
        </div>
        <div class="panel-body">
            <h2>Skills</h2>
            <ul>
                <li>C#</li>
                <li>HTML</li>
                <li>JavaScript</li>
                <li>PHP</li>
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel-body">
            <h2>@Model.YearsOfExperience years of experience</h2>
            <ul>
                <li>Internship: Floor Manager Assistant at Calling Global B.V.</li>
                <li>Internship: Web Developer at Easy Settings B.V.</li>
                <li>Senior Software Developer at Codelogic B.V.</li>
            </ul>
        </div>
        <div class="panel-body">
            <h2>Education</h2>
            <ul>
                <li>
                    Hogeschool van Arnhem en Nijmegen
                    Bachelor of Business Administration (B.B.A.), Human Resources and Quality Management
                </li>
                <li>
                    International University College
                    Bachelor, Hospitality Management
                </li>
                <li>
                    High School "Dora Gabe" - Dobrich
                    Secondary Education, Visual Arts
                </li>
            </ul>
        </div>
    </div>
</div>